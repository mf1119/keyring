void setup()
{
    // put your setup code here, to run once:

    for (uint8_t i = FIRST_PIN; i < NUMBER_OF_GPIO_PINS + 1; i++)
    {
        pinMode(i, INPUT_PULLUP);
    }

    Serial.begin(115200);
    delay(500);
    Serial.println("Starting...");
}

void loop()
{
    // put your main code here, to run repeatedly:

    for (uint8_t i = FIRST_PIN; i < NUMBER_OF_GPIO_PINS + 1; i++)
    {
        Serial.print("Pin ");
        Serial.print(i);
        Serial.print(": ");
        Serial.print(digitalRead(i));
        Serial.print("\n");
    }

    Serial.println("=============");

    delay(5000);
}
